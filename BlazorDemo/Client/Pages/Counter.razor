@page "/counter"

<h1>Counter</h1>

<p>Current count: @State.Counter</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [CascadingParameter]
    public UserProvider State { get; set; }


    private void IncrementCount()
    {
      State.Counter++;
      State.SetCounter(State.Counter);
      StateHasChanged();
    }
}
